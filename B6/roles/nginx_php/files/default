server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /opt/nginx/ansible;
    index index.php;
    server_name _;
    location / {
	try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
	include snippets/fastcgi-php.conf;
	fastcgi_pass unix:/run/php/php8.1-fpm.sock;
    }
}
